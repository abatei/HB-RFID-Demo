<Application x:Class="HB_RFID_Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HB_RFID_Demo"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Tb" TargetType="{x:Type TextBlock}">
            <!--<Setter Property="FontSize" Value="14"/>-->
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <!--<Setter Property="Padding" Value="0,0,0,0"/>-->
        </Style>

        <!--设置单行 TextBlock 内容样式 -->
        <Style x:Key="TbContent" TargetType="{x:Type TextBlock}">
            <!--<Setter Property="FontSize" Value="14"/>-->
            <!--<Setter Property="HorizontalAlignment" Value="Center"/>-->
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#555"/>
            <Setter Property="Padding" Value="5,2,5,2"/>
            <Setter Property="Margin" Value="2,0,6,0"/>
        </Style>
    </Application.Resources>
</Application>
